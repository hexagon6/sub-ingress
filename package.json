{
  "name": "sub-ingress",
  "version": "0.0.3",
  "description": "a simple http-ingress reverse proxy - easily configurable for subdomains",
  "main": "index.mjs",
  "type": "module",
  "bin": {
    "sub-ingress": "./index.mjs"
  },
  "scripts": {
    "dev": "npx nodemon -w . index.mjs",
    "lint": "eslint . --ext .js,.mjs",
    "test": "ava"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint && npm test"
    }
  },
  "eslintConfig": {
    "extends": [
      "@linguala/eslint-config"
    ],
    "rules": {
      "no-console": 1
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">= 13.2"
  },
  "author": "hexagon6 <npm@fet.li>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexagon6/sub-ingress"
  },
  "license": "ISC",
  "dependencies": {
    "@polka/send-type": "^0.5.2",
    "axios": "^0.19.0",
    "js-yaml": "^3.13.1",
    "polka": "^0.5.2",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@linguala/eslint-config": "^0.3.1",
    "ava": "^2.4.0",
    "husky": "^3.1.0",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2"
  }
}
